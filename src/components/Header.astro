---
import ThemeButton from "./ThemeButton.astro";
---

<header
  id="header"
  class="sticky top-0 z-40 flex-none mx-auto w-full border-b border-gray-50/0 transition-[opacity] ease-in-out"
  data-fb-sticky-header
>
  <div class="absolute inset-0"></div>
  <div
    class="relative mx-auto max-w-4xl py-3 px-3 md:px-6 w-full flex text-gray-800 dark:text-white"
  >
    <a href="/" class="flex items-center text-xl font-medium"> Hieu Tran </a>
    <nav class="flex items-center text-default font-medium ml-auto">
      <ul class="flex items-center">
        <li>
          <a href="/" class="px-4 py-4 md:py-3 block">Engineering</a>
        </li>
        <li>
          <a href="/life" class="px-4 py-4 md:py-3 block">Life</a>
        </li>
        <li>
          <a href="/about" class="px-4 py-4 md:py-3 block">About</a>
        </li>
      </ul>
      <div class="space-x-3 flex ml-2">
        <a href="https://twitter.com/hieuhani" target="_blank">
          <span class="sr-only">Follow Hieu Tran on Twitter</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-twitter"
            ><path
              d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
            ></path></svg
          >
        </a>
        <a href="https://github.com/hieuhani" target="_blank">
          <span class="sr-only">Go to Hieu Tran Github</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-github"
            ><path
              d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
            ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
          >
        </a>
        <ThemeButton />
      </div>
    </nav>
  </div>
</header>
